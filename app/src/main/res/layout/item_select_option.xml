<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="14sp"
        android:textColor="@color/text_color_dark_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/iv_option"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_radius_corner_img"
        app:layout_constraintStart_toEndOf="@id/tv_count"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    <TextView
        android:id="@+id/tv_option_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_black"
        android:text="옵션명"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@id/iv_option"
        app:layout_constraintStart_toEndOf="@id/iv_option"
        android:layout_marginStart="@dimen/activity_horizontal_margin"/>

    <TextView
        android:id="@+id/tv_option_sale_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="40%"
        android:textColor="@color/main_color"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv_option"
        app:layout_constraintBottom_toBottomOf="@id/iv_option"
        android:layout_marginStart="@dimen/activity_horizontal_margin"/>

    <TextView
        android:id="@+id/tv_option_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10,000"
        android:textColor="@color/text_color_black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/tv_option_sale_rate"
        app:layout_constraintBottom_toBottomOf="@id/tv_option_sale_rate"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/tv_free_delivery"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:background="@drawable/custom_radius_corner_img"
        android:text="무료배송"
        android:textColor="@color/text_color_dark_gray"
        android:textStyle="bold"
        android:textSize="11sp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/tv_option_price"
        app:layout_constraintTop_toTopOf="@id/tv_option_price"
        app:layout_constraintBottom_toBottomOf="@id/tv_option_price"
        android:layout_marginStart="5dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_hot_sale"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:background="@drawable/custom_radius_corner_img"
        android:backgroundTint="@color/background_highlight"
        android:text="특가"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="11sp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/tv_free_delivery"
        app:layout_constraintTop_toTopOf="@id/tv_option_price"
        app:layout_constraintBottom_toBottomOf="@id/tv_option_price"
        android:layout_marginStart="3dp"
        android:visibility="gone"/>



</androidx.constraintlayout.widget.ConstraintLayout>