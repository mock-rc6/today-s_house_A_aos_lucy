<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/custom_radius_corner_img"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_clip"
        app:layout_constraintEnd_toEndOf="@id/iv_img"
        app:layout_constraintBottom_toBottomOf="@id/iv_img"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/tv_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회사이름"
        android:textColor="@color/text_color_dark_gray"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@id/iv_img"
        app:layout_constraintTop_toBottomOf="@id/iv_img"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="[15%쿠폰] 무료배송!모던 라운드 리빙박스"
        android:textColor="@color/text_color_black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/iv_img"
        app:layout_constraintEnd_toEndOf="@id/iv_img"
        app:layout_constraintTop_toBottomOf="@+id/tv_company"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/tv_sale_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="57%"
        android:textSize="17sp"
        android:textColor="@color/main_color"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/iv_img"
        app:layout_constraintTop_toBottomOf="@id/tv_item_name"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2,500"
        android:textSize="17sp"
        android:textColor="@color/text_color_black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/tv_sale_rate"
        app:layout_constraintTop_toTopOf="@id/tv_sale_rate"
        android:layout_marginStart="6dp"/>

    <ImageView
        android:id="@+id/iv_star"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_score_star"
        app:layout_constraintStart_toStartOf="@id/iv_img"
        app:layout_constraintTop_toBottomOf="@id/tv_sale_rate"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.7"
        android:textColor="@color/text_color_black"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_13"
        app:layout_constraintTop_toTopOf="@id/iv_star"
        app:layout_constraintStart_toEndOf="@id/iv_star"
        app:layout_constraintBottom_toBottomOf="@id/iv_star"
        android:layout_marginStart="3dp"/>

    <TextView
        android:id="@+id/tv_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="리뷰 21,696"
        android:textSize="@dimen/text_size_13"
        android:textColor="@color/text_color_dark_gray"
        app:layout_constraintTop_toTopOf="@id/iv_star"
        app:layout_constraintStart_toEndOf="@id/tv_score"
        app:layout_constraintBottom_toBottomOf="@id/iv_star"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/tv_free_delivery"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:background="@drawable/custom_radius_corner_img"
        android:text="무료배송"
        android:textColor="@color/text_color_dark_gray"
        android:textStyle="bold"
        android:textSize="11sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/iv_img"
        app:layout_constraintTop_toBottomOf="@id/iv_star"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/tv_hot_sale"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:background="@drawable/custom_radius_corner_img"
        android:backgroundTint="@color/background_highlight"
        android:text="특가"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="11sp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/tv_free_delivery"
        app:layout_constraintTop_toTopOf="@id/tv_free_delivery"
        android:layout_marginStart="3dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>