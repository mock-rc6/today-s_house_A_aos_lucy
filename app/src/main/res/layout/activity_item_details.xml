            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_detail_more_review"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/custom_radius_corner_btn_color_main"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toBottomOf="@id/rv_detail_review"
                android:layout_marginTop="20dp"
                android:text="리뷰 더보기 (1,000 )"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@color/white"/>

            <View
                android:id="@+id/detail_divider_8"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/space_color"
                app:layout_constraintTop_toBottomOf="@id/btn_detail_more_review"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tv_detail_question_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="문의"
                android:textColor="@color/text_color_black"
                android:textStyle="bold"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toBottomOf="@+id/detail_divider_8"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/tv_detail_question_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6000"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/main_color"
                app:layout_constraintStart_toEndOf="@+id/tv_detail_question_title"
                app:layout_constraintTop_toTopOf="@+id/tv_detail_question_title"
                android:layout_marginStart="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_detail_question_title"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_arrow"
                android:backgroundTint="@color/text_color_dark_gray"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toTopOf="@+id/tv_detail_question_title"
                app:layout_constraintBottom_toBottomOf="@+id/tv_detail_question_title"/>

            <View
                android:id="@+id/detail_divider_9"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/space_color"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_question_title"
                android:layout_marginTop="20dp"/>

            <TextView
