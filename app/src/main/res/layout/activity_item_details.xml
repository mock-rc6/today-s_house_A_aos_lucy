                android:textColor="@color/text_color_black"
                android:textStyle="bold"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toBottomOf="@+id/detail_divider_9"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_arrow"
                android:backgroundTint="@color/text_color_dark_gray"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toTopOf="@+id/tv_detail_delivery_title"
                app:layout_constraintBottom_toBottomOf="@+id/tv_detail_delivery_title"/>

            <View
                android:id="@+id/detail_divider_10"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/space_color"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_delivery_title"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/tv_detail_recommend_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다른고객이 함께 본 상품"
                android:textColor="@color/text_color_black"
                android:textStyle="bold"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toBottomOf="@+id/detail_divider_10"
                android:layout_marginTop="20dp"/>

<!--            recyclerview 추가 수정/ 추천아이템-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_detail_recommend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_recommend_title"/>

            <View
                android:id="@+id/detail_divider_11"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/space_color"
                app:layout_constraintTop_toBottomOf="@id/rv_detail_recommend"
                android:layout_marginTop="50dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
