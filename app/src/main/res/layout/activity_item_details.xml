<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.main.store.ItemDetailsActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/detail_bottom_app_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/detail_top_app_bar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="#00FFFFFF"
                android:stateListAnimator="@null">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <ImageButton
                        android:id="@+id/btn_login_back_arrow"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_back_arrow"
                        android:background="#00FFFFFF"
                        android:scaleType="centerInside"
                        android:layout_marginStart="@dimen/activity_horizontal_margin" />

                    <ImageButton
                        android:id="@+id/btn_home"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_home_app_bar"
                        android:background="#00FFFFFF"
                        android:scaleType="centerInside"
                        android:layout_marginStart="@dimen/activity_horizontal_margin" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="상품명"
                        android:textSize="@dimen/title_text"
                        android:textStyle="bold"
                        android:textColor="@color/text_color_black"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"/>

                    <ImageButton
                        android:id="@+id/btn_search"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_search"
                        android:background="#00FFFFFF"
                        android:scaleType="centerInside"
                        android:layout_marginStart="@dimen/activity_horizontal_margin" />

                    <ImageButton
                        android:id="@+id/btn_basket"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_basket"
                        android:background="#00FFFFFF"
                        android:scaleType="centerInside"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

                </LinearLayout>
            </com.google.android.material.appbar.AppBarLayout>

            <TextView
                android:id="@+id/top_category_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대분류"
                android:textColor="@color/text_color_dark_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail_top_app_bar"
                android:textSize="13sp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/top_arrow_1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/ic_arrow"
                android:backgroundTint="@color/text_color_dark_gray"
                app:layout_constraintStart_toEndOf="@id/top_category_1"
                app:layout_constraintTop_toTopOf="@id/top_category_1"
                android:layout_marginStart="5dp"
                app:layout_constraintBottom_toBottomOf="@id/top_category_1"/>

            <TextView
                android:id="@+id/top_category_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="중분류"
                android:textColor="@color/text_color_dark_gray"
                app:layout_constraintStart_toEndOf="@id/top_arrow_1"
                app:layout_constraintTop_toTopOf="@id/top_category_1"
                android:textSize="13sp"
                android:layout_marginStart="5dp"
                />

            <ImageView
                android:id="@+id/top_arrow_2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/ic_arrow"
                android:backgroundTint="@color/text_color_dark_gray"
                app:layout_constraintStart_toEndOf="@id/top_category_2"
                app:layout_constraintTop_toTopOf="@id/top_category_1"
                android:layout_marginStart="5dp"
                app:layout_constraintBottom_toBottomOf="@id/top_category_1"/>

            <TextView
                android:id="@+id/top_category_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소분류"
                android:textColor="@color/text_color_dark_gray"
                app:layout_constraintStart_toEndOf="@id/top_arrow_2"
                app:layout_constraintTop_toTopOf="@id/top_category_1"
                android:layout_marginStart="5dp"
                app:layout_constraintBottom_toBottomOf="@id/top_category_1"
                android:textSize="13sp" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vp_detail_item"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                app:layout_constraintTop_toBottomOf="@id/top_category_1"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <LinearLayout
                android:id="@+id/ll_today_deal_due"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/vp_detail_item"
                android:background="@color/background_highlight"
                android:orientation="horizontal">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_watch"
                    android:backgroundTint="#FFB9B9"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="오늘의 딜"
                    android:textColor="#FFB9B9"
                    android:gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:textSize="13sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/detail_due"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="3일 남음"
                    android:gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@drawable/ic_arrow"
                    android:backgroundTint="@color/white"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_detail_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회사명"
                android:textColor="@color/text_color_dark_gray"
                android:textStyle="bold"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/ll_today_deal_due"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/activity_horizontal_margin"/>

            <ImageView
                android:id="@+id/iv_detail_share"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_share"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_company_name"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

            <TextView
                android:id="@+id/tv_detail_item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="상품명"
                android:textColor="@color/text_color_black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toTopOf="@+id/iv_detail_share"
                app:layout_constraintEnd_toStartOf="@+id/iv_detail_share"
                android:layout_marginEnd="10dp"/>

            <include
                android:id="@+id/detail_stars"
                layout="@layout/item_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_detail_item_name"
                app:layout_constraintStart_toStartOf="@+id/tv_detail_item_name"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(1,000)"
                android:textSize="@dimen/text_size_13"
                android:textColor="@color/main_color"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/detail_stars"
                app:layout_constraintTop_toTopOf="@id/detail_stars"
                app:layout_constraintBottom_toBottomOf="@id/detail_stars"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/tv_detail_due"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17%"
                android:textStyle="bold"
                android:textColor="@color/main_color"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/detail_stars"
                app:layout_constraintStart_toStartOf="@id/detail_stars"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tv_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10,000원"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/text_color_black"
                app:layout_constraintTop_toTopOf="@id/tv_detail_due"
                app:layout_constraintStart_toEndOf="@id/tv_detail_due"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/tv_hot_sale"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:background="@drawable/custom_radius_corner_img"
                android:backgroundTint="@color/background_highlight"
                android:text="특가"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="11sp"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@id/tv_detail_price"
                app:layout_constraintTop_toTopOf="@id/tv_detail_price"
                app:layout_constraintBottom_toBottomOf="@id/tv_detail_price"
                android:layout_marginStart="5dp"/>

            <View
                android:id="@+id/detail_divider_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/space_color"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_due"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/tv_detail_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="배송"
                android:textColor="@color/text_color_dark_gray"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/detail_divider_1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/tv_detail_delivery_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="배송 상품정보 참고"
                android:textColor="@color/text_color_black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@+id/tv_detail_delivery"
                app:layout_constraintStart_toEndOf="@+id/tv_detail_delivery"
                android:layout_marginStart="@dimen/activity_horizontal_margin" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/ic_arrow"
                android:backgroundTint="@color/text_color_gray"
                app:layout_constraintStart_toEndOf="@+id/tv_detail_delivery_content"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="@id/tv_detail_delivery_content"
                app:layout_constraintBottom_toBottomOf="@id/tv_detail_delivery_content"/>

            <View
                android:id="@+id/detail_divider_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/space_color"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_delivery"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:id="@+id/iv_detail_company"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_comapany"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail_divider_2"
                android:layout_marginTop="20dp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"/>

            <TextView
                android:id="@+id/tv_detail_company_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회사명"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_color_dark_gray"
                app:layout_constraintStart_toEndOf="@+id/iv_detail_company"
                app:layout_constraintTop_toTopOf="@+id/iv_detail_company"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_detail_company"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="@drawable/custom_highlight_background"
                android:backgroundTint="@color/space_color"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toTopOf="@+id/iv_detail_company">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="브랜드홈"
                    android:textStyle="bold"
                    android:textColor="@color/text_color_dark_gray"
                    android:textSize="@dimen/text_size_13"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/ic_arrow"
                    android:backgroundTint="@color/text_color_dark_gray"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"/>

            </LinearLayout>

            <View
                android:id="@+id/detail_divider_3"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/space_color"
                app:layout_constraintTop_toBottomOf="@id/iv_detail_company"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:id="@+id/iv_detail_advertisement"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail_divider_3"/>

            <View
                android:id="@+id/detail_divider_4"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/space_color"
                app:layout_constraintTop_toBottomOf="@id/iv_detail_advertisement" />

            <TextView
                android:id="@+id/tv_detail_style_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="유저들의 스타일링샷"
                android:textColor="@color/text_color_black"
                android:textStyle="bold"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toBottomOf="@+id/detail_divider_4"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/tv_detail_style_title_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6,000"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/main_color"
                app:layout_constraintStart_toEndOf="@+id/tv_detail_style_title"
                app:layout_constraintTop_toTopOf="@+id/tv_detail_style_title"
                android:layout_marginStart="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_detail_style_title"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_arrow"
                android:backgroundTint="@color/text_color_dark_gray"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toTopOf="@+id/tv_detail_style_title"
                app:layout_constraintBottom_toBottomOf="@+id/tv_detail_style_title"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_detail_styling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_detail_style_title"
                android:layout_marginTop="20dp"/>

<!--            recyclerview 스크롤 추가-->

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_detail_more_styling"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_radius_corner_main_color_stroke"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:text="스타일링샷 전체보기 ＞"
                android:textColor="@color/main_color"
                app:layout_constraintTop_toBottomOf="@+id/rv_detail_styling"
                android:layout_marginTop="10dp"/>

            <View
                android:id="@+id/detail_divider_5"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/space_color"
                app:layout_constraintTop_toBottomOf="@id/btn_detail_more_styling"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/tv_detail_event_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="첫 사진 올리면 1,000 포인트를 드려요."
                android:textColor="@color/text_color_black"
                android:textStyle="bold"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toBottomOf="@+id/detail_divider_5"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="혜택보기"
                android:textColor="@color/text_color_gray"
                android:textStyle="bold"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/tv_detail_event_1"
                app:layout_constraintTop_toTopOf="@+id/tv_detail_event_1"
                app:layout_constraintBottom_toBottomOf="@+id/tv_detail_event_1"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/tv_detail_event_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지금 살고 있는 공간을 공유하고\n포인트를 받아 쇼핑도 즐겨 보세요!"
                android:textColor="@color/text_color_black"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toBottomOf="@+id/tv_detail_event_1"
                android:layout_marginTop="10dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_add_post"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="사진 올리기"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_camera"
                android:drawablePadding="10dp"
                android:paddingHorizontal="20dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:background="@drawable/custom_radius_corner_btn_color_main"
                app:layout_constraintTop_toBottomOf="@+id/tv_detail_event_2"
                android:layout_marginTop="20dp"
                android:stateListAnimator="@null"/>

            <ImageView
                android:id="@+id/iv_event_cat"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/img_cat"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/btn_add_post"
                android:layout_marginBottom="-20dp"/>

            <View
                android:id="@+id/detail_divider_6"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/space_color"
                app:layout_constraintTop_toBottomOf="@id/iv_event_cat"/>

<!--            탭레이아웃 추가 수정-->
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tl_detail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detail_divider_6"
                android:overScrollMode="never"/>
<!--            리사이클러뷰 추가 수정-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_detail_item_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tl_detail"
                android:layout_marginTop="20dp"/>

            <View
                android:id="@+id/detail_divider_7"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/space_color"
                app:layout_constraintTop_toBottomOf="@id/rv_detail_item_list"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/tv_detail_review_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="리뷰"
                android:textColor="@color/text_color_black"
                android:textStyle="bold"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toBottomOf="@+id/detail_divider_7"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/tv_detail_review_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6,000"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/main_color"
                app:layout_constraintStart_toEndOf="@+id/tv_detail_review_title"
                app:layout_constraintTop_toTopOf="@+id/tv_detail_review_title"
                android:layout_marginStart="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_detail_review_title"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_arrow"
                android:backgroundTint="@color/text_color_dark_gray"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                app:layout_constraintTop_toTopOf="@+id/tv_detail_review_title"
                app:layout_constraintBottom_toBottomOf="@+id/tv_detail_review_title"/>

