<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_review"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/radius_corner_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    <TextView
        android:id="@+id/tv_review_content"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toEndOf="@id/iv_review"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/iv_review"
        android:layout_marginTop="10dp"
        android:text="구축 아파트를 매수하면서 올수리를 계획하게 됐고 여러업체와 상담 후 벨류인테리어에서 진행했어요.\n상담 전날부터 귀찮게 해드려서 죄송했는데요"
        android:textSize="13sp"
        android:textColor="@color/text_color_black"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_review_profile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_interest_1"
        app:layout_constraintStart_toStartOf="@id/tv_review_content"
        app:layout_constraintBottom_toBottomOf="@id/iv_review"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상호명"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/text_size_13"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/civ_review_profile"
        app:layout_constraintTop_toTopOf="@id/civ_review_profile"
        app:layout_constraintBottom_toBottomOf="@id/civ_review_profile"
        android:layout_marginStart="5dp"/>





</androidx.constraintlayout.widget.ConstraintLayout>