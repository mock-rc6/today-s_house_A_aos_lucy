<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll_home_interest_today_deal_contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_home_interest_today_deal"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:background="@drawable/custom_radius_corner_img"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_marginStart="20dp">

            <TextView
                android:id="@+id/tv_home_interest_today_deal_due"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/custom_radius_corner_img"
                android:backgroundTint="@color/background_highlight"
                android:text="5일 남음"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_home_interest_deal_item_title"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="삼성 스마트모니터 M5 S32BM501 32인치 IoT 화이트 넷플릭스"
                android:textSize="14sp"
                android:textColor="@color/text_color_black"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tv_home_interest_deal_item_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26%"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="@color/background_highlight"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="특가 351개 보기 >"
                android:textColor="@color/background_highlight"
                android:textStyle="bold"/>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>