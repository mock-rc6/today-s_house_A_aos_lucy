<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/iv_home_interest_viewer_1"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/custom_radius_corner_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:scaleType="centerCrop"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_clip"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/iv_home_interest_viewer_1"
        app:layout_constraintBottom_toBottomOf="@+id/iv_home_interest_viewer_1"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tv_home_interest_viewer_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="기분따라 바뀌는 디자이너가 꾸민 임대 아파트"
        android:textSize="15sp"
        android:textColor="@color/text_color_black"
        app:layout_constraintStart_toStartOf="@id/iv_home_interest_viewer_1"
        app:layout_constraintEnd_toEndOf="@+id/iv_home_interest_viewer_1"
        app:layout_constraintTop_toBottomOf="@id/iv_home_interest_viewer_1"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>